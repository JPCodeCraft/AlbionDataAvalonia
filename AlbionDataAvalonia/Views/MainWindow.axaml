<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AlbionDataAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AlbionDataAvalonia.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AlbionDataAvalonia.Views.MainWindow"
        Icon="/Assets/albiondata-client.ico"
        Title="Albion Data Client"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="30">
	
	<Window.Styles>
		<Style Selector="Window">
			<Setter Property="Background" Value="rgba(50, 50, 50, 1)" />
		</Style>
	</Window.Styles>
	
	<Grid Margin="0 30 0 0" Background="rgba(0,0,0,0.05)">
		<views:MainView />
	</Grid>

</Window>
