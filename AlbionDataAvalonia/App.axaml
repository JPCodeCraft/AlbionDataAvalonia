<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vms="clr-namespace:AlbionDataAvalonia.ViewModels"
             x:Class="AlbionDataAvalonia.App"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>	

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/afm-logo.ico"
                      ToolTipText="Albion Data Client">
				<TrayIcon.Menu>
					<NativeMenu x:DataType="vms:MainViewModel">
						<NativeMenuItem Header="Show Window" Command="{Binding ShowMainWindowCommand}"/>
						<NativeMenuItem Header="Exit" Command="{Binding ExitCommand}"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
